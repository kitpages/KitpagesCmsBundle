{%spaceless%}
<div class="kit-cms-toolbar-page kit-cms-toolbar-top">
    <ul class="kit-cms-toolbar-page-top-actions">
        <li>
            <a href="{{ path('kitpages_cms_page_publish', { 'id': kitCmsPage.id, 'kitpages_target' : target }) }}">{% if kitCmsPage.isPublished != 1 %}<img height="14" src="{{asset("bundles/kitpagescms/icon/warning.png")}}"/>{% endif %}Publish Page</a>
        </li>
        <li>
            <a id="kit-cms-page-edit" >Edit Page Data</a>
        </li>
    </ul>
</div>
<div class="kit-cms-toolbar-extra-form kit-cms-toolbar-page-form kit-cms-hidden">
    {#{% render 'KitpagesCmsBundle:Page:edit' with {'id': kitCmsPage.id, 'inToolbar' : true } %}#}
    {{ render(controller('KitpagesCmsBundle:Page:edit', {'id': kitCmsPage.id, 'inToolbar' : true } )) }}
</div>
<script>
$('#kit-cms-page-edit').click(function() {
    $('.kit-cms-toolbar-page-form').toggleClass('kit-cms-hidden');
});
</script>
{%endspaceless%}
