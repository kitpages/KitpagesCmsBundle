{% extends 'KitpagesCmsBundle:Page:layout.html.twig' %}

{% block kitpages_cms_stylesheets %}
{{ parent() }}
{% endblock kitpages_cms_stylesheets %}

{% block kitpages_cms_javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset ("bundles/kitpagescms/js/tiny_mce/tiny_mce.js") }}" ></script>
<script language="javascript" type="text/javascript">
tinyMCE.init({
    mode : "textareas",
    theme : "simple",
    plugins : "paste",
    paste_auto_cleanup_on_paste : true,
    editor_selector : "kit-cms-rte-simple",
    entity_encoding : '',
    safari_warning: false
});
</script>
<script>
tinyMCE.init({
    mode : "textareas",
    theme : "advanced",
    plugins : "paste",
    paste_auto_cleanup_on_paste : true,
    theme_advanced_buttons1 : "bold,italic,underline,strikethrough,sub,sup,separator,undo,redo,separator,cleanup,separator,bullist,numlist,outdent,indent",
    theme_advanced_buttons2 : "justifyleft,justifycenter,justifyright,justifyfull,separator,link,unlink",
    theme_advanced_buttons3 : "",
    theme_advanced_buttons4 : "",

    editor_selector : "kit-cms-rte-advanced"
});

</script>

{% endblock kitpages_cms_javascripts %}

